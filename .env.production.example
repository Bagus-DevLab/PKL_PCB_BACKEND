# ===========================================
# PKL PCB IoT Backend - PRODUCTION Configuration
# ===========================================
# INSTRUKSI: Copy file ini ke .env di server production
# dan ganti VALUES dengan nilai production yang sebenarnya!

# Environment: development / production
ENVIRONMENT=production

# ===========================================
# Database (PostgreSQL)
# ===========================================
# GANTI dengan production database credentials
POSTGRES_USER=your_prod_db_user
POSTGRES_PASSWORD=your_prod_db_password
POSTGRES_DB=iot_db_prod
DATABASE_URL=postgresql://your_prod_db_user:your_prod_db_password@prod-db-host:5432/iot_db_prod

# ===========================================
# JWT Authentication
# ===========================================
# GANTI dengan secret key baru yang KUAT! (jangan pakai development key)
SECRET_KEY=generate_new_strong_secret_key_here_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===========================================
# Google OAuth
# ===========================================
# GANTI dengan credentials production dari Google Cloud Console
GOOGLE_CLIENT_ID=your_production_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
# PENTING: Harus HTTPS dan domain actual (bukan localhost!)
BASE_URL=https://yourdomain.com

# ===========================================
# MQTT (Mosquitto)
# ===========================================
MQTT_BROKER=mosquitto_service_name_or_ip
MQTT_PORT=1883
MQTT_TOPIC=devices/+/data
MQTT_USERNAME=mqtt_prod_user
MQTT_PASSWORD=mqtt_prod_password_strong

# ===========================================
# CORS (Frontend Origins)
# Format: JSON array string - sesuaikan dengan domain frontend production
# ===========================================
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# ===========================================
# Alert Thresholds (optional)
# ===========================================
# ALERT_TEMP_MAX=35.0
# ALERT_TEMP_MIN=20.0
# ALERT_AMMONIA_MAX=20.0
